@page
@model IndexModel
@{
    ViewData["Title"] = "Issues";
}

<script src="~/lib/jquery/dist/jquery.min.js"></script>

<h1>@ViewData["Title"]</h1>

<br/><br/>

<table>
    <tr>
        <td>
            <p>Issue Title</p> 
        </td>
        <td>
            <p>Issue Priority</p>
        </td>
    </tr>
    <tr>
        <td>
            <input type="text" id="title_dp" disabled></input>
        </td>
        <td>
            <select id="priority_dp" disabled>
